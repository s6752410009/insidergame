        border-radius: 8px;
        color: #aaa;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .bottom-link:hover {
        background: #444;
        color: #fff;
        border-color: #555;
    }
    
    .bottom-link.admin {
        border-color: #9b59b6;
        color: #9b59b6;
    }
    
    .bottom-link.admin:hover {
        background: #9b59b6;
        color: #fff;
    }

    @media (max-width: 600px) {
