    }
    
    .profile-modal-name {
        font-family: 'Orbitron', sans-serif;
        font-weight: 700;
        font-size: 1.5em;
        margin: 0;
    }
    
    .profile-modal-joined {
        color: #888;
        font-size: 0.9em;
    }
    
    .profile-modal-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
        margin-bottom: 20px;
    }
    
    .profile-stat-box {
        background: rgba(255,255,255,0.05);
        padding: 15px;
        border-radius: 12px;
        text-align: center;
    }
    
    .profile-stat-value {
        font-family: 'Orbitron', sans-serif;
        font-weight: 700;
        font-size: 1.5em;
    }
    
    .profile-stat-label {
        color: #888;
        font-size: 0.85em;
    }
    
    .profile-roles {
        background: rgba(255,255,255,0.05);
        padding: 15px;
        border-radius: 12px;
    }
    
    .profile-roles h4 {
        margin: 0 0 10px 0;
        color: #f39c12;
        font-size: 1em;
    }
    
    .profile-role-row {
        display: flex;
        justify-content: space-between;
        padding: 5px 0;
        border-bottom: 1px solid #333;
    }
    
    .profile-role-row:last-child {
        border-bottom: none;
    }
