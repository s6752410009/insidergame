    });

    // ‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö/‡πÇ‡∏≠‡∏ô admin
    socket.on('adminTransferred', function(data) {
      Swal.fire({
        icon: 'success',
        title: data.message || '‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå Admin ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÅ‡∏õ‡∏•‡∏á‡πÅ‡∏•‡πâ‡∏ß',
