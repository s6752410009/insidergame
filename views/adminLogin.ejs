        margin-bottom: 20px;
    }
    
    .back-link {
        display: block;
        margin-top: 20px;
        color: #888;
        text-decoration: none;
        transition: color 0.3s;
    }
    
    .back-link:hover {
        color: #fff;
    }
</style>

